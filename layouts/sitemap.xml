{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:mobile="http://www.google.com/schemas/sitemap-mobile/1.0"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
  {{ range .Data.Pages }}
  {{ if not .Params.noindex }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{ if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</lastmod>
    {{ end }}
    {{ with .Sitemap.ChangeFreq }}
    <changefreq>{{ . }}</changefreq>
    {{ else }}
      {{ if .IsHome }}
    <changefreq>daily</changefreq>
      {{ else if eq .Section "posts" }}
    <changefreq>weekly</changefreq>
      {{ else if or (eq .Kind "section") (eq .Kind "taxonomy") }}
    <changefreq>weekly</changefreq>
      {{ else }}
    <changefreq>monthly</changefreq>
      {{ end }}
    {{ end }}
    {{ if .Sitemap.Priority }}
    <priority>{{ .Sitemap.Priority }}</priority>
    {{ else }}
      {{ if .IsHome }}
    <priority>1.0</priority>
      {{ else if eq .Section "posts" }}
    <priority>0.8</priority>
      {{ else if or (eq .Kind "section") (eq .Kind "taxonomy") }}
    <priority>0.6</priority>
      {{ else }}
    <priority>0.5</priority>
      {{ end }}
    {{ end }}
    
    {{ if .Params.thumbnail }}
    <image:image>
      <image:loc>{{ .Params.thumbnail | absURL }}</image:loc>
      <image:title>{{ .Title }}</image:title>
      <image:caption>{{ .Description | default .Summary | truncate 160 }}</image:caption>
    </image:image>
    {{ end }}
    
    {{ if .Params.featureImage }}
    <image:image>
      <image:loc>{{ .Params.featureImage | absURL }}</image:loc>
      <image:title>{{ .Title }}</image:title>
      <image:caption>{{ .Description | default .Summary | truncate 160 }}</image:caption>
    </image:image>
    {{ end }}
    
    {{ range .Translations }}
    <xhtml:link 
      rel="alternate"
      hreflang="{{ .Language.Lang }}"
      href="{{ .Permalink }}" />
    {{ end }}
    
    {{ if and (eq .Section "posts") (gt (.Date.Unix) (sub now.Unix 2592000)) }}
    <news:news>
      <news:publication>
        <news:name>{{ .Site.Title }}</news:name>
        <news:language>{{ .Site.Language.Lang }}</news:language>
      </news:publication>
      <news:publication_date>{{ .Date.Format "2006-01-02" }}</news:publication_date>
      <news:title>{{ .Title }}</news:title>
      <news:keywords>{{ with .Params.tags }}{{ delimit . "," }}{{ end }}</news:keywords>
    </news:news>
    {{ end }}
  </url>
  {{ end }}
  {{ end }}
</urlset>